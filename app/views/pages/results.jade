extends ../layout

block content
	.container
		.row
			.panel.panel-default
				.panel-heading
					h4 #{keyword}
				.panel-body
					if movies && movies.length>0
						each item in movies
							.col-md-2
								.thumbnail
									a(href="/movie/#{item._id}")
										img(src="/upload/#{item.poster}", alt="#{item.title}",style="height:100px")
									.caption
										h4 #{item.title}
										p: a.btn(href="/movie/#{item._id}", role="button",style="background-color:#e00010;color:white") 查看详情
			ul.pagination
				- for (var i=0;i<totalPage;i++){
					- if(currentPage==(i+1)){
						li.active
							span #{currentPage}
					- }
					- else{
						li
							a(href="/results?#{query}&p=#{i}") #{i+1}
					- }
				- }
			
