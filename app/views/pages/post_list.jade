extends ../layout

block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 电影名字
						th 导演
						th 录入时间
						th PV
						th 查看
						th 更新
						th 删除
				tbody
					each item in posts
						tr(class="item-id-#{item._id}")
							td #{item.title}
							td #{item.writer}
							td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
							td #{item.pv}
							td: a(target="_blank", href="../../post/#{item._id}") 观看
							td: a(target="_blank", href="../post/update/#{item._id}") 修改
							td
								button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除
	script(src="/js/admin.js")