        img#foo_image(src="/images/qrcode.jpg",alt="如果有问题,可以扫一扫添加我的微信",title="点击可显示微信大图")
        #fooModal.fooModal
          span.fooClose(onclick="document.getElementsById(fooModal).style.display='none'")&times;
